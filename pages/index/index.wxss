/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.m-list {
  white-space: nowrap;
  display: flex;
  border-bottom: 1px solid #efefef;
}

.m-list .item {
  display: inline-block;
  /*align-items: center;
  justify-content: center;*/
  text-align: center;
  width: 80px;
  height: 38px;
  line-height: 38px;
  font-size: 12px;
  color: #333;
}

.m-list .item.active {
  color: #ed4040;
}

.m-main-list .item {
  box-sizing: border-box;
  padding: 10px;
  width: 100%;
  height: 100px;
  border-bottom: 1px solid #efefef;
}
